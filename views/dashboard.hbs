<head>
  <script type="text/javascript" src="/javascripts/dashboard.js">
  </script>
  <link rel="stylesheet" href="/stylesheets/dashboard.css">
</head>
<body class="page">
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper z-depth-5">
                <a href="../" class="brand-logo"><img src="/images/logo.png" height="35px"></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="../">Logout</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container z-depth-5">
      <div class="dash">
        <div class="inner-container z-depth-5">
          <span class="row">
            <p class="valign-wrapper headline"><img class="responsive-image col l2 circle vertical-center" src="/images/charles-manson-mugshot.jpg"> {{title}}</p><br>
          </span>
        </div>
        <span class="row col 10">
        <button type="button" class="btn create-class" name="button">New Class</button>
        {{#each classes}}
          <div class="collection" data-id={{this.id}} >
            <span class="badge"><button class="remove_class" type="button" name="button"><i class="material-icons">delete</i></button></span>
            <a class="valign-wrapper collection-item z-depth-5" onclick="myFunction({{this.id}})"><i class="material-icons">people</i> {{this.name}}
            </a>

          </div>
          {{/each}}
        </span>
      </div>
    </div>
    <script>
    function myFunction(id) {
        window.open("../../classroom/" + id, "_blank",  "directories=no,toolbar=no,scrollbars=no,resizable=no,location=no,status=no,top=10,left=10,width=200,height=500");
    }
    </script>
</body>
